    <ul>
        <li>
            <% patient.note.forEach(function(note) { %>
                <%= note.noteTitle %>
                <% }) %>
                
                <% } else {%>
                   <h5>No Notes Yet</h5> 
                <% } %>
            </li>
        </ul>
